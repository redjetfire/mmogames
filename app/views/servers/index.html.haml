%h3.serverh3 Schedule Calendar
#servers
  #month
    = link_to "<", date: @date.prev_month
    = @date.strftime("%B %Y")
    = link_to ">", date: @date.next_month
  = calendar @date do |date|
    = date.day
    - if @servers_by_date[date]
      %ul
        - @servers_by_date[date].each do |server|
          = link_to server.name, server
